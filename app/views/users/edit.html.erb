<h1>Edit Profile</h1>
<%= form_tag "/users/#{@user.id}", method: "patch" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" value="<%= @user.name %>" name="form_name">
  </div>
  <div class="form-group">
    Image: <input type="text" class="form-control" value="<%= @user.image %>" name="form_image">
  </div>
  <div class="form-group">
    Attachment: <input type="text" class="form-control" value="<%= @user.attachment %>" name="form_attachment">
  </div>
  <input type="submit" value="Update Profile">
<% end %>